Bootstrap: docker
From: ubuntu:latest

%files
  . /project

%post
  apt update
  apt install -y cmake g++ make

  apt install -y libpmix-dev libpmix2
  apt install -y openmpi-bin libopenmpi-dev

  
  cd /project
  mkdir -p build && cd build
  cmake ..
  cmake --build .
  cp /project/build/main /project